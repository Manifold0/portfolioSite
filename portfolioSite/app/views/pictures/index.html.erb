  <div id="carousel-image" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
          <% @pictures.each do |picture| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= picture.id.to_s %>" class="active"></li>
          <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
          <div class="item active">
              <% @pictures.each do |picture| %>
              <img src=<%= picture.image_url.to_s %> />
              <div class="carousel-caption">
                <h3><%= picture.title %></h3>
                <p><%= picture.description %></p>
              </div>
              <% end %>
          </div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-image" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#carousel-image" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
  </div>

  </tbody>
</table>

